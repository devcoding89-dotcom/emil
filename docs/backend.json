
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "isAdmin": {
          "type": "boolean",
          "description": "Whether the user has administrative privileges."
        }
      },
      "required": [
        "displayName",
        "email"
      ]
    },
    "Parse": {
      "title": "Email Parse Result",
      "description": "Stores the result of an AI email extraction process.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "A user-defined title for this parse record."
        },
        "text": {
          "type": "string",
          "description": "The original raw text that was parsed."
        },
        "emails": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "email"
          },
          "description": "The list of unique emails extracted from the text."
        },
        "contacts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "email": { "type": "string" },
              "firstName": { "type": "string" },
              "lastName": { "type": "string" },
              "company": { "type": "string" },
              "position": { "type": "string" }
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the extraction was performed."
        },
        "campaignTitle": {
          "type": "string",
          "description": "Optional title if associated with a specific campaign."
        }
      },
      "required": [
        "text",
        "emails",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "email-password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile data."
    },
    "/users/{userId}/parses/{parseId}": {
      "schema": {
        "$ref": "#/entities/Parse"
      },
      "description": "Stores a user's history of email extraction results (parses)."
    }
  }
}
